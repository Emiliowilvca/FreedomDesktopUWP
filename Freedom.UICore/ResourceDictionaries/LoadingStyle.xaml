<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cc="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:brushes="using:Microsoft.UI.Xaml.Media">

    <Style x:Key="LoadingStyle"  TargetType="cc:Loading">
        <Setter Property="Background">
            <Setter.Value>
                <brushes:AcrylicBrush TintColor="Black"
                                      TintOpacity="0.4" />
            </Setter.Value>
        </Setter>
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal"
                                Padding="12">
                        <Grid Margin="0,0,8,0">
                            <ProgressRing IsActive="True"
                                          Foreground="{StaticResource SystemAccentColor}"
                                          Width="50"
                                          Height="50" />
                        </Grid>
                        <TextBlock Text="Loading, Please wait..."
                                   FontSize="20"
                                   Foreground="Black"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>